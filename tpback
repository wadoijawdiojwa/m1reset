-- LocalScript for teleporting the player 30 studs behind them when the "T" key is pressed

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

-- Function to teleport the player 30 studs behind them
local function teleportBack()
    local character = player.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        local humanoidRootPart = character.HumanoidRootPart
        local currentPosition = humanoidRootPart.Position
        local currentRotation = humanoidRootPart.CFrame

        -- Calculate the new position 30 studs behind the player
        local backwardDirection = currentRotation.LookVector * -30
        local newPosition = currentPosition + backwardDirection

        humanoidRootPart.CFrame = CFrame.new(newPosition, newPosition + currentRotation.LookVector)
    end
end

-- Connect the key press event to the teleportBack function
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if input.KeyCode == Enum.KeyCode.T and not gameProcessedEvent then
        teleportBack()
    end
end)
